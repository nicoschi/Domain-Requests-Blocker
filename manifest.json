{
  "description": "Request blocker per domain",
  "manifest_version": 2,
  "name": "Domain Requests Blocker",
  "version": "0.1",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "69372e5d-ac35-4917-b3d7-739a65ce15f1",
      "strict_min_version": "76.0"
    }
  }
}
